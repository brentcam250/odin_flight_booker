<h3 class = 'subtitle'>Search</h3>



<%= simple_form_for(@flight, url: flights_path, method: :get, local: true, :defaults =>{ :input_html => { :class => 'm-5' }}) do |f| %>
    <table class= 'table'>
        <tr>
            <th><%= f.input :from_airport_id, collection: @airport_options, :selected => @flight.from_airport_id %></th>
            <th><%= f.input :to_airport_id, collection: @airport_options, :selected => @flight.to_airport_id %></th>
            <th><%= f.input :flight_date_formatted, collection: @flight_date_options, :selected => @flight.flight_date_formatted  %></th>  
            <th><%= f.input :passengers, collection: 1..4, :selected => @flight.passengers  %></th>  
  
        </tr>


    </table>
    <br />
    <br />
    <br />
    <br />
    <br />




    <%= f.button :submit, 'Search', :class => 'button is-link'%>
<% end %>
<br />
