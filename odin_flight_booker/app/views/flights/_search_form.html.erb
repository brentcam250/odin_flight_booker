<h3>Search</h3>

<table>
    <tr>
        <th>From: </th>
        <th>To: </th>
        <th>Date: </th>
        <th>Number of Passengers: </th>
    </tr>
    <tr>
        <%= form_with( method: "get" ) do %>
            <%= label_tag(:query, "Search for flights:") %>
            <td><%= select_tag(:from_airport_id, options_for_select(@airport_options)) %> </td>
            <td><%= select_tag(:to_airport_id, options_for_select(@airport_options)) %> </td>
            <td><%= select_tag(:departure_date, options_from_collection_for_select(Flight.get_flight_dates, 'departure_time', :flight_date_formatted) ) %></td>
            <td><%= select_tag(:num_passengers, options_for_select([1,2,3,4]) ) %></td>

            <%= submit_tag("Search") %>
        <% end %>
    </tr>

</table>