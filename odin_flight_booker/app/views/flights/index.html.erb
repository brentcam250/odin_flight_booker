<h1>Flights</h1>

<%= render 'search_form'  %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

<%= params[:flight] %>

num passengers:

<%= @num_passengers %>

<br />
  <span>Flights</span>
  
    <% @flights.each do |flight| %>
      <tr>
        <td><%= button_to 'Book', 
        new_booking_path,
        method: :get,
        params: {flight_id: flight.id, num_passengers: @num_passengers} %></td>
        <td><b><%= flight.from_airport.name %></b>  to   <b><%= flight.to_airport.name %></b>  departing on: <%= flight.flight_date_formatted %> at: <b><%= flight.flight_time_formatted %></b></td>
        <td><%= link_to 'Show', flight %></td>
        <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
        <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>

    <% end %>


  </tbody>
</table>

